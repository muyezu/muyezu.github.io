<script>

var a = 0;

var arr = [""];

function addPerson() {
var Month = ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"];
var d = new Date();
var M = d.getMonth();
var N = d.getDate();
var H = d.getHours();
var Min = d.getMinutes();
var S = d.getSeconds();

  a++;
  var x = document.getElementById('usersChoice').value;
  arr.push("x");
  var li = document.createElement('li');
  var newText = document.createTextNode(x + " Was checked in on " + Month[M]+N+" At "+H+":"+Min+":"+S);
  li.appendChild(newText);
  var olTag = document.getElementsByTagName('ol')[0];
  olTag.appendChild(li);

document.getElementById('delete').disabled = false;

  if(a >= 4) {
   document.getElementById('add').disabled = true;
  }
}

function lockRoom() {
  document.getElementById('add').disabled = true;
  document.getElementById('waitListed').innerHTML = "Room Locked";
}

function unlockRoom() {
  document.getElementById('add').disabled = false;
  document.getElementById('waitListed').innerHTML = "Room Unlocked"
  document.getElementById('waitListed').innerHTML = "";

if (a >= 4) {
  document.getElementById('add').disabled = true;
 }
}

function removeAll() {
   while (a >= 1) {
     a--;
     var minus = document.getElementById('people').value;
     var arr = document.getElementsByTagName("li")[minus - 1];
     var parent = arr.parentNode;
     parent.removeChild(arr);
     document.getElementById('add').disabled = false;
   }
}

function removeOne() {
a--;
var minus = document.getElementById('people').value;
var arr = document.getElementsByTagName("li")[minus - 1];
var parent = arr.parentNode;
parent.removeChild(arr);
document.getElementById('add').disabled = false;

if (a <= 0) {
  document.getElementById('delete').disabled = true;
 }
}


